<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#902424"
    tools:context=".TelaQuiz1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFlagGame"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#7C0FDBF6"
            android:gravity="center"
            android:text="Flag Game"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#9E631FDB"
            android:gravity="center"
            android:text="Que país é esse? 1/10"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            app:srcCompat="@drawable/img_1" />

        <RadioGroup
            android:id="@+id/rgOptions"
            android:layout_width="match_parent"
            android:layout_height="198dp">

            <RadioButton
                android:id="@+id/rbWrong1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brasil" />

            <RadioButton
                android:id="@+id/rbWrong2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alemanha" />

            <RadioButton
                android:id="@+id/rbRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kuwait" />

            <RadioButton
                android:id="@+id/rbWrong3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Armênia" />
        </RadioGroup>

        <Button
            android:id="@+id/btnAnswer"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#236C12"
            android:text="RESPONDER"
            app:toggleCheckedStateOnClick="false" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>